<%- include('./partials/header.ejs'); %>
<%- include('./partials/homeNavbar.ejs'); %>

<body>
<div class="container">
    <hr>
    <div class="jumbotron mt-4">
        <h1 class="display-4">Hello, Welcome!</h1>
        <p class="lead">This is a minimalist forum, where you can share your questions and help others students too,
            answering their questions.</p>
        <hr class="my-4">
        <p>Our mission is to connect you all that are learning how to code.</p>
        <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
    </div>

    <hr>
    <% articles.forEach( article => { %>
        <div class="card mt-3 mb-4">
            <div class="card-header mb-4">
                <h3> <%= article.title %> </h3>
            </div>
            <div class="card-body mb-4">
                <a href="/<%= article.slug %>" target="_blank" class="bnt btn-success p-2"> Read article</a>
            </div>
        </div>
    <% }) %>
</div>
</body>

